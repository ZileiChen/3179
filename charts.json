{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {
    "type": "fit",
    "resize": true,
    "contains": "padding"
  },
  "vconcat": [
    {
      "width": 800,
      "height": 500,
      "projection": {
        "type": "mercator",
        "center": [133, -28],
        "scale": 500,
        "translate": [400, 250]
      },
      "layer": [
        {
          "data": {
            "url": "states.json",
            "format": { "type": "topojson", "feature": "states" }
          },
          "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.5 },
          "transform": [
            {
              "lookup": "properties.STATE_NAME",
              "from": {
                "data": { "url": "stateData.json" },
                "key": "State",
                "fields": ["OreProcessed", "Mines"]
              }
            }
          ],
          "encoding": {
            "color": {
              "field": "OreProcessed",
              "type": "quantitative",
              "scale": { "scheme": "blues", "domain": [200, 20000] },
              "title": "Ore Processed (Mt)"
            },
            "tooltip": [
              { "field": "properties.STATE_NAME", "type": "nominal", "title": "State" },
              { "field": "OreProcessed", "type": "quantitative", "title": "Total Ore Processed (Mt)" },
              { "field": "Mines", "type": "quantitative", "title": "Number of Mines" }
            ]
          }
        },
        {
          "data": {
            "url": "stateCentroids.json"
          },
          "transform": [
            {
              "lookup": "State",
              "from": {
                "data": { "url": "stateData.json" },
                "key": "State",
                "fields": ["Mines"]
              }
            }
          ],
          "mark": { "type": "text", "dy": -20, "fontSize": 14, "fontWeight": "bold" },
          "encoding": {
            "longitude": { "field": "longitude", "type": "quantitative" },
            "latitude": { "field": "latitude", "type": "quantitative" },
            "text": { "field": "Mines", "type": "quantitative" },
            "tooltip": [{ "field": "Mines", "type": "quantitative", "title": "Mines" }]
          }
        }
      ]
    },
    {
      "width": 800,
      "height": 500,
      "projection": {
        "type": "mercator",
        "center": [133, -28],
        "scale": 500,
        "translate": [400, 250]
      },
      "layer": [
        {
          "data": {
            "url": "states.json",
            "format": { "type": "topojson", "feature": "states" }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.5,
            "fill": "#f0f0f0"
          }
        },
        {
          "data": {
            "url": "mineLocations.csv"
          },
          "mark": {
            "type": "circle",
            "opacity": 0.8,
            "stroke": "black",
            "strokeWidth": 0.3
          },
          "encoding": {
            "longitude": { "field": "Longitude", "type": "quantitative" },
            "latitude": { "field": "Latitude", "type": "quantitative" },
            "color": {
              "field": "Status",
              "type": "nominal",
              "title": "Mine Status",
              "legend": { "orient": "bottom-left" },
              "scale": {
                "domain": ["Operating mine", "Care and maintenance", "Developing mine"],
                "range": ["#2ca02c", "#ff7f0e", "#1f77b4"]
              }
            },
            "size": {
              "value": 50
            },
            "tooltip": [
              { "field": "Name", "type": "nominal", "title": "Mine Name" },
              { "field": "State", "type": "nominal" },
              { "field": "Status", "type": "nominal" },
              { "field": "CommodityGroup", "type": "nominal", "title": "Commodity Group" }
            ]
          }
        }
      ]
    },
    {
      "title": "Gold Production per Year by State in Australia",
      "width": 800,
      "height": 400,
      "layer": [
        {
          "data": {
            "url": "gold_production_long.csv",
            "format": { "type": "csv" }
          },
          "selection": {
            "StateSelection": {
              "type": "multi",
              "fields": ["State"],
              "bind": "legend"
            }
          },
          "transform": [
            {
              "calculate": "toDate(datum.YEAR)",
              "as": "YearDate"
            },
            {
              "filter": { "selection": "StateSelection" }
            }
          ],
          "mark": "line",
          "encoding": {
            "x": {
              "field": "YearDate",
              "type": "temporal",
              "title": "Year",
              "axis": { "format": "%Y" }
            },
            "y": {
              "field": "GoldProduced",
              "type": "quantitative",
              "title": "Gold Produced (kg Au)"
            },
            "color": {
              "field": "State",
              "type": "nominal",
              "title": "State"
            },
            "tooltip": [
              { "field": "YEAR", "type": "ordinal", "title": "Year" },
              { "field": "State", "type": "nominal", "title": "State" },
              { "field": "GoldProduced", "type": "quantitative", "title": "Gold Produced (kg Au)" }
            ]
          }
        },
        {
          "data": {
            "values": [
              {
                "Year": 2003,
                "Event": "Mining Boom in Australia"
              }
            ]
          },
          "transform": [
            {
              "calculate": "toDate(datum.Year)",
              "as": "YearDate"
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "rule",
                "color": "red",
                "strokeWidth": 2
              },
              "encoding": {
                "x": {
                  "field": "YearDate",
                  "type": "temporal"
                }
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "right",
                "dx": -20,
                "dy": -200,
                "color": "red",
                "fontSize": 12,
                "fontStyle": "italic"
              },
              "encoding": {
                "x": {
                  "field": "YearDate",
                  "type": "temporal"
                },
                "y": {
                  "datum": { "expr": "height" },
                  "type": "quantitative"
                },
                "text": {
                  "field": "Event",
                  "type": "nominal"
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent"
    }
  }
}
